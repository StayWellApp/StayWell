rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default Deny: By default, no one can access anything.
    match /{document=**} {
      allow read, write: if false;
    }

    // A function to check if the user is a super admin
    function isSuperAdmin() {
      return request.auth.token.superAdmin == true;
    }

    // A function to check if the user is the owner of a resource
    function isOwner(resource) {
      return request.auth.uid == resource.data.ownerId;
    }

    // == USER RULES ==

    // --- FINAL FIX: Two separate 'allow list' rules ---
    // This is the correct way to allow multiple query types.
    match /users {
      
      // Rule 1: Allow Super Admin to run ANY list query.
      // This will match your query: where("role", "==", "owner")
      allow list: if isSuperAdmin();

      // Rule 2: Allow a normal user to query for their own staff
      // This uses the correct syntax for your original rule
      allow list: if
        request.auth.uid != null &&
        request.query.where.ownerId == request.auth.uid;
    }
    // --- END OF FIX ---
    
    // --- This block is for 'get'/'write' (single doc) operations ---
    match /users/{userId} {
      // Allow user to get/write their own doc, or super admin to do so
      allow get: if request.auth.uid == userId || isSuperAdmin();
      allow write, create: if request.auth.uid == userId || isSuperAdmin();

      // Subcollections must be nested inside the document path
      match /activity_logs/{logId} {
        allow read: if isSuperAdmin();
        allow write: if false; // Only from backend
      }

      match /communication_logs/{logId} {
        allow read, write, delete: if isSuperAdmin();
      }

      match /configs/{configId} {
        allow read, write: if request.auth.uid == userId || isSuperAdmin();
      }
    }

    // == PROPERTY RULES ==
    match /properties/{propertyId} {
      allow read: if isOwner(resource) ||
        isSuperAdmin();
      allow write: if isOwner(resource);
    }
    
    // Other rules for your application...
    match /appSettings/{docId} {
      allow read, write: if isSuperAdmin();
    }
    match /subscriptionPlans/{planId} {
      allow read, write: if isSuperAdmin();
    }
    match /auditLog/{logId} {
      allow read: if isSuperAdmin();
    }
    match /userSettings/{userId} {
        allow read, write: if request.auth.uid == userId;
    }
    match /customRoles/{roleId} {
        allow read, write: if isOwner(resource);
    }
    match /bookings/{bookingId} {
      allow read, write: if isOwner(resource) || isSuperAdmin();
    }
    match /storageLocations/{locationId} {
        allow read, write: if isSuperAdmin() || isOwner(resource); // Added isSuperAdmin()
    }
    match /storageLocations/{locationId}/supplies/{supplyId} {
        allow read, write: if isSuperAdmin() || get(/databases/$(database)/documents/storageLocations/$(locationId)).data.ownerId == request.auth.uid; // Added isSuperAdmin()
    }
    match /checklistTemplates/{templateId} {
        allow read, write: if isSuperAdmin() || isOwner(resource); // Added isSuperAdmin()
    }
    match /tasks/{taskId} {
      allow read, write: if isSuperAdmin() || isOwner(resource) || // Added isSuperAdmin()
        request.auth.uid == resource.data.assignedTo;
    }
    match /tasks/{taskId}/comments/{commentId} {
        allow read, create: if isSuperAdmin() || get(/databases/$(database)/documents/tasks/$(taskId)).data.ownerId == request.auth.uid || // Added isSuperAdmin()
          get(/databases/$(database)/documents/tasks/$(taskId)).data.assignedTo == request.auth.uid;
    }
  }
}